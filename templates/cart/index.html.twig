{% extends "base.html.twig" %}

{% block title %}
    Votre panier
{% endblock %}

{% block body %}
    <h1>Votre panier</h1>
    <table class="table">
        <thead>
            <tr>
                <th>Produit</th>
                <th>Prix</th>
                <th>Quantit√©</th>
                <th>Total</th>
            </tr>
        </thead>
        <tbody>
            {% dump(items) %}
            {% for item in items %}
                <tr>
                    <td>
                        {{ item.product.name }}
                    </td>
                    <td>
                        {{ item.product.price }}
                    </td>
                    <td>
                        {{ item.qty }}
                    </td>
                    <td>
                        {{ item.qty * item.product.price }}
                    </td>
                </tr>
            {% endfor %}
        </tbody>
        <tfoot>
            <tr>
                <td colspan="3">Total :</td>
                <td>{{ total }}</td>
            </tr>
        </tfoot>
    </table>
{% endblock %}

